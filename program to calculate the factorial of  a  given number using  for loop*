//*write a program to calculate the factorial of  a  given number using  for loop*//


#include<stdio.h>
int main()
{
    
    int n,i,fact=1;
    printf("enter a number of which you want to calculate factorial");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        fact=fact*i;
    }
    printf("factorial of a given number is %d",fact);
    return 0;
}
