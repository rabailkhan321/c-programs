#include<stdio.h>
int main()
{
    char op;
    float num1, num2, num3;

    printf("enter numbers:");
    printf("Enter <num1> <op> <num2>");
    scanf("%f %c %f", &num1, &op, &num2);

    switch(op)
   {

        case '+':
            num3 = num1 + num2;
            break;

        case '-':
            num3 = num1 - num2;
            break;

        case '*':
            num3 = num1 * num2;
            break;

        case '/':
            num3 = num1 / num2;
            break;

        default:
            printf("Invalid operator");
    }

    printf("%.2f %c %.2f = %.2f", num1, op, num2, num3);

    return 0;
}
